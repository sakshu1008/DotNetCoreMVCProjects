@model IEnumerable<EmployeeRepositoryDesignPattern.Models.EmployeeDetails>
@{
    ViewData["Title"] = "Index";
}

<h1 style="position:center; color:cornflowerblue">Employee List</h1>
<a class="btn btn-primary" asp-action="Create" asp-controller="Employee">Add New</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Phone Number</th>
            <th>Is Active?</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.EmployeeName</td>
                <td>@employee.EmployeeDescription</td>
                <td>@employee.EmployeePhone</td>
                @if(employee.IsActive != true)
                {
                     <td>No</td>   
                }
                else{
                    <td>Yes</td>
                }
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.EmployeeId">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-controller="Employee" asp-route-id="@employee.EmployeeId">Details</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.EmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
